import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
     Scanner input = new Scanner(System.in);
     System.out.println("Enter number of elements:");
     int size = input.nextInt();
     int[] arr = new int[size];
     System.out.print("Enter " + size + " integer elements:");
     for (int i = 0; i < size; i++) {
         System.out.println("Element " + i + ": ");
         arr[i] = input.nextInt();
     }
     System.out.println("\nOriginal Array:");
     printArray(arr);

     bubbleSort(arr);
     System.out.println("\nArray after bubble sort:");
     printArray(arr);

     System.out.println("\nEnter the element to search for:");
     int searchElement = input.nextInt();

     int index = linearSearch(arr, searchElement);

     if (index != 1) {
         System.out.println(searchElement + " is found at index " + index);
     } else {
         System.out.println(searchElement + "is not in the array");
     }
     input.close();
        }
        public static void bubbleSort(int[] arr) {
        int n = arr.length;
        for (int i = 0; i < n - 1; i++) {
            for (int j = 0; j < n - i - 1; j++) {
                if (arr[j] > arr[j + i]){
                    int temp = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = temp;
                }
            }
        }
    }
    public static int linearSearch(int[] arr, int target) {
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] == target) {
                return i;
            }
        }
        return -1;
    }
    public static void printArray(int[] arr) {
        for (int j : arr) {
            System.out.println(j + "");
        }
        System.out.println();
    }
}
